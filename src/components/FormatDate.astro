---
import { getLangFromUrl } from '@/i18n/utils'
export interface Props {
  date: Date
  title: string
}
const { date, title } = Astro.props

const lang = getLangFromUrl(Astro.url)
---

<time
  datetime={date.toISOString()}
  class='text-neutral-600 dark:text-cAccent text-sm min-w-[80px] text-right'
  title={title}
>
  {
    date.toLocaleDateString(`${lang}-us`, {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    })
  }
</time>
