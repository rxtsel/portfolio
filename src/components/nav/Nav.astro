---
import style from './nav.module.css'
import Icon from '../icons/Icon.astro'
const {url} = Astro.props
---

<nav class={style.nav}>

  <a href="/" class={style.logo} tabindex="1">
    <img class={style.logo__img} src="logo.svg" alt="puede ser un logo del rostro de un gato negro con ojos blancos y una letra c blanca en la frente">
  </a>
  
  <div id="nav__links" class={style.nav__links}>

    <a href={url === 'pageNotFound' ? '/#home' : '#home'}
      class={`home ${style.nav__url}`}
      tabindex="2"
    >
      <Icon icon="home" />
      Home
    </a>  

    <a href={url === 'pageNotFound' ? '/#about' : '#about'}
      class={`about ${style.nav__url}`}
      tabindex="3"
    >
      <Icon icon="about" />
      About
    </a>

    <a href={url === 'pageNotFound' ? '/#portfolio' : '#portfolio'} 
      class={`portfolio ${style.nav__url}`} 
      tabindex="4"
    >
      <Icon icon="portfolio" />
      Portfolio
    </a>

    <a href={url === 'pageNotFound' ? '/#connect' : '#connect'} 
      class={`connect ${style.nav__url}`} 
      tabindex="5"
    >
      <Icon icon="connect" />
      Connect
    </a>

  </div>

  <div id="burger" class={style.burger} tabindex="0" >
    <Icon icon="burger" /> 
    <Icon icon="hidden" /> 
  </div>

  <div class={style.social}>
    <a class={style.campo} href="https://twitter.com/rxtsel" target="_blank" tabindex="6">
      <Icon icon="twitter-alt" />
      go to twitter
    </a>
    <a class={style.campo} href="https://instagram.com/rxtsel" target="_blank" tabindex="7">
      <Icon icon="instagram" />
      go to instagram
    </a>
    <a class={style.campo} href="https://github.com/rxtsel" target="_blank" tabindex="8">
      <Icon icon="github" />
      go to github
    </a>
  </div>

</nav>
