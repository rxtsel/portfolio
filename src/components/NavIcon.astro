---
import { Icon } from '@/icons'
import type { RouteNames } from './Header.astro'

interface Props {
  name: RouteNames | string
}

const { name } = Astro.props
---

{name === 'home' && <Icon.home />}

{name === 'aboutMe' && <Icon.user />}

{name === 'portfolio' && <Icon.portfolio />}

{name === 'blog' && <Icon.blog />}
