---
import NavDesktop from '@/components/NavDesktop.astro'
import NavMobile from '@/components/NavMobile.astro'

const { pathname } = Astro.url

const isBlog = pathname.startsWith('/blog')
---

<header
  id='header'
  class='hidden lg:block full p-2 fixed top-0 left-0 right-0 z-10'
>
  <NavDesktop trailingSlash={isBlog} />
</header>

<header
  class='block lg:hidden full px-4 py-3 fixed bottom-5 sm:bottom-10 left-0 right-0 z-50 bg-cPaper/10 backdrop-blur-xl shadow-md max-w-xs sm:max-w-sm mx-auto w-full rounded-2xl'
>
  <NavMobile trailingSlash={isBlog} />
</header>

<style>
  #header {
    animation: blur linear both;
    animation-timeline: scroll();
    animation-range: 0 500px;
  }

  @keyframes blur {
    to {
      @apply bg-cBlack/20 backdrop-blur shadow;
    }
  }
</style>
