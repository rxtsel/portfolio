---
import type { RouteNames } from './Header.astro'

import HomeIcon from '@/icons/simple/home.svg'
import UserIcon from '@/icons/simple/user.svg'
import PortfolioIcon from '@/icons/simple/portfolio.svg'
import BlogIcon from '@/icons/simple/blog.svg'

interface Props {
  name: RouteNames | string
}

const { name } = Astro.props
---

{name === 'home' && <HomeIcon />}

{name === 'aboutMe' && <UserIcon />}

{name === 'portfolio' && <PortfolioIcon />}

{name === 'blog' && <BlogIcon />}
