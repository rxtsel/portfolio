---
import { getI18N } from '@/i18n'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<footer class='pb-32 mt-14 lg:my-4 lg:py-4 w-full text-center text-cAccent'>
  <p>
    &copy; 2022 - {new Date().getFullYear()}. {i18n.footer.p1} &hearts; {
      i18n.footer.p2
    }{' '}
    <a
      class='hover:text-cBlue transition-colors duration-300 ease-in'
      href='https://twitter.com/rxtsel'
      target='_blank'
    >
      @rxtsel</a
    >.
  </p>
</footer>
