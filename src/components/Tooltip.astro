---
// For use tooltip, add `relative group` class to parent container

export interface Props {
  content: string
}

const { content } = Astro.props
---

<div
  role='tooltip'
  class='inline-block absolute right-[107%] 2xl:right-auto 2xl:left-[104%] group-hover:visible pointer-events-none z-10 w-max text-sm px-2 py-1 text-black dark:text-cWhite transition-all duration-150 border border-neutral-300 dark:border-neutral-800 bg-neutral-100 dark:bg-cPaper rounded-md shadow-sm invisible opacity-0 group-hover:opacity-100'
>
  {content}
</div>
