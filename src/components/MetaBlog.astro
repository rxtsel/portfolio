---
import { getI18N } from '@/i18n'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<meta name='keywords' content={i18n.site.keywords} />
<!-- Primary Meta Tags -->
<meta name='title' content='Cristhian Melo · Blog' />
<meta name='description' content={i18n.blog.description} />
<!-- Open Graph / Facebook -->
<meta property='og:type' content='website' />
<meta property='og:url' content='https://www.rxtsel.dev/blog' />
<meta property='og:title' content='Cristhian Melo · Blog' />
<meta property='og:description' content={i18n.blog.description} />
<meta property='og:image' content='https://www.rxtsel.dev/og_blog.png' />
<!-- Twitter -->
<meta property='twitter:card' content='summary_large_image' />
<meta property='twitter:url' content='https://www.rxtsel.dev/blog' />
<meta property='twitter:title' content='Cristhian Melo · Blog' />
<meta property='twitter:description' content={i18n.blog.description} />
<meta property='twitter:image' content='https://www.rxtsel.dev/og_blog.png' />

