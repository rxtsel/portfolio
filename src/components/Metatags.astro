---
import type { Data, TMetatags } from '@/types'

interface Props {
  title: string
  metaFor: TMetatags
  postData: Partial<Data>
  slug: string | undefined
}

import MetaBase from '@/components/MetaBase.astro'
import MetaBlog from '@/components/MetaBlog.astro'
import MetaPost from '@/components/MetaPost.astro'

const { metaFor, postData, slug } = Astro.props

const rollBackSlug = slug || 'https://www.rxtsel.dev/meta_tags_large_icon.png'
---

<meta name='author' content='Cristhian Melo' />
<meta name='copyright' content='Cristhian Melo' />

{metaFor === 'Base' && <MetaBase />}

{metaFor === 'Blog' && <MetaBlog />}

{metaFor === 'Post' && <MetaPost postData={postData} slug={rollBackSlug} />}

<!-- WPA	 -->
<link rel='icon' type='image/svg+xml' href='/16x16.svg' sizes='16x16' />
<link rel='icon' type='image/svg+xml' href='/32x32.svg' sizes='32x32' />
<link rel='icon' type='image/svg+xml' href='/96x96.svg' sizes='96x96' />
<link
  rel='apple-touch-icon'
  type='image/svg+xml'
  href='/180x180.svg'
  sizes='180x180'
/>

<!-- Global -->
<meta name='generator' content={Astro.generator} />
<link rel='manifest' href={'/manifest.json'} />
<link rel='sitemap' href={'/sitemap-index.xml'} />
<meta name='theme-color' content='#1A1A1A' />
