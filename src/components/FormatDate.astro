---
export interface Props {
  date: Date
}
const { date } = Astro.props

const { lang } = Astro.params
---

<time datetime={date.toISOString()} class='text-neutral-400 text-sm'>
  {
    date.toLocaleDateString(`${lang}-us`, {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    })
  }
</time>
